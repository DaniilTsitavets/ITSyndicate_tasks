resource "aws_security_group" "eks_nodes" {
  name   = "eks-node-sg"
  vpc_id = aws_vpc.task3_vpc.id

  ingress {
    from_port = 0
    to_port   = 0
    protocol  = "-1"
    self      = true
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}